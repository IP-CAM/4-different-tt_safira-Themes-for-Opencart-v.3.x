{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <a href="{{ store_create_url }}" data-toggle="tooltip" title="{{ text_create_new_store }}" class="btn btn-default"><i class="fa fa-plus"></i> {{ text_new_store }}</a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if success %}
            <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_my_stores }}</h3>
                    </div>
                    <div class="panel-body">
                        <form method="post" action="" enctype="multipart/form-data" id="form-order">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                    <tr>
                                        <td class="text-left">#</td>
                                        <td class="text-left">{{ text_country }}</td>
                                        <td class="text-left">{{ text_city }}</td>
                                        <td class="text-left">Currency</td>
                                        {#<td class="text-left">{{ text_aita_code }}</td>#}
                                        <td class="text-left">{{ text_location }}</td>
                                        <td class="text-left">{{ text_contact_person }}</td>
                                        <td class="text-left">{{ text_contact_phone }}</td>
                                        <td class="text-center">{{ text_active }}</td>
                                        <td class="text-center">{{ text_action }}</td>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% if stores %}
                                        {% for key, store in stores %}
                                            <tr>
                                                <td><b>{{ key+1 }}</b></td>
                                                <td>{{ store.country }}</td>
                                                <td>{{ store.region }}</td>
                                                <td class="text-center">{{ store.currency_id }}</td>
                                                {#<td class="text-center">{{ store.code }}</td>#}
                                                <td>
                                                    {{ store.address }}<br>
                                                    <a href="https://www.google.com/maps/search/?api=1&query={{ store.lat }},{{ store.lng }}" target="_blank"><b>Map</b></a>
                                                </td>
                                                <td>{{ store.contact_person }}</td>
                                                <td>{{ store.contact_phone }}</td>
                                                <td class="text-center"><b>{{ store.active ? text_yes : text_no }}</b></td>
                                                <td class="text-center">
                                                    <a href="{{ store.edit_url }}" class="btn btn-primary"><i class="fa fa-pencil"></i> {{ text_edit }}</a>
                                                    <a href="{{ store.toggle_url }}" class="btn btn-success"><i class="fa fa-sliders"></i> {{ text_toggle_status }}</a>
                                                    <a href="{{ store.delete_url }}" class="btn btn-danger"><i class="fa fa-trash"></i> {{ text_delete_store }}</a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% else %}
                                        <tr><td class="text-center" colspan="8">{{ text_no_results }}</td></tr>
                                    {% endif %}
                                </table>
                            </div>
                        </form>
                        <div class="row">
                            <div class="col-sm-6 text-left">{{ pagination }}</div>
                            <div class="col-sm-6 text-right">{{ results }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{ footer }}